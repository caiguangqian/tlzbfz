<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vanda.tlzbfz.mapper.TDbrwBeanMapper">
  <resultMap id="BaseResultMap" type="com.vanda.tlzbfz.entity.TDbrwBean">

    <result column="ID" property="id"     jdbcType="VARCHAR" />
    <result column="GW" property="gw" jdbcType="VARCHAR" />
    <result column="XM" property="xm"     jdbcType="VARCHAR" />
    <result column="ZT" property="zt"     jdbcType="VARCHAR" />
    <result column="BJCJS" property="bjcjs" jdbcType="VARCHAR" />
    <result column="WCCS" property="wccs" jdbcType="INTEGER" />
    <result column="SYCS" property="sycs" jdbcType="INTEGER" />
    <result column="RWBH" property="rwbh" jdbcType="VARCHAR" />

  </resultMap>
  <sql id="Base_Column_List">
    ID, GW, XM, ZT, BJCJS, WCCS, SYCS, RWBH
  </sql>
  <select id="getDbrwByRwbh" parameterType="com.vanda.tlzbfz.entity.TDbrwBean" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from onion.T_DBRW
    where RWBH = #{rwbh,jdbcType=VARCHAR}
  </select>

  <update id="updateDbrw" parameterType="com.vanda.tlzbfz.entity.TDbrwBean">
    update onion.T_DBRW
    <set>
      <if test="gw != null">
        GW = #{gw,jdbcType=VARCHAR},
      </if>
      <if test="xm != null">
        XM = #{xm,jdbcType=VARCHAR},
      </if>
      <if test="zt != null">
        ZT = #{zt,jdbcType=VARCHAR},
      </if>
      <if test="bjcjs != null">
        BJCJS = #{bjcjs,jdbcType=VARCHAR},
      </if>
      <if test="wccs != null">
        WCCS = #{wccs,jdbcType=INTEGER},
      </if>
      <if test="sycs != null">
        SYCS = #{sycs,jdbcType=INTEGER},
      </if>

    </set>
    where RWBH = #{rwbh,jdbcType=VARCHAR}
  </update>
</mapper>